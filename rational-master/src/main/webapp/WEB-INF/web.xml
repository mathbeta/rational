    <servlet>
        <servlet-name>operate</servlet-name>
        <servlet-class>com.mathbeta.rational.master.servlet.DispatchServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!--<servlet-mapping>
